{
  "manifest_version": 3,
  "name": "Currency Checker",
  "version": "1.0",
  "description": "Check USD and EUR to BRL exchange rates",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://open.er-api.com/*"
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
